<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- Timeline Visual Elements -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginEnd="16dp">

        <!-- Circle Indicator -->
        <androidx.cardview.widget.CardView
            android:id="@+id/timeline_circle"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:layout_marginTop="4dp">

            <View
                android:id="@+id/circle_inner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#9C27B0" />

        </androidx.cardview.widget.CardView>

        <!-- Vertical Line -->
        <View
            android:id="@+id/timeline_line"
            android:layout_width="3dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#9C27B0"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp" />

    </LinearLayout>

    <!-- Task Content -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Task Title -->
            <TextView
                android:id="@+id/task_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tarea Ejemplo"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="4dp" />

            <!-- Task Description -->
            <TextView
                android:id="@+id/task_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DescripciÃ³n de la tarea"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp" />

            <!-- Task Details Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Type Badge -->
                <TextView
                    android:id="@+id/item_type_badge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TAREA"
                    android:textSize="10sp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/type_badge_bg"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="2dp"
                    android:textStyle="bold" />

                <!-- Subject (only for tasks) -->
                <TextView
                    android:id="@+id/task_subject"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Asignatura"
                    android:textSize="12sp"
                    android:textColor="#9C27B0"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp" />

                <!-- Priority Indicator -->
                <View
                    android:id="@+id/priority_indicator"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/circle_shape"
                    android:layout_marginStart="8dp" />

                <!-- Date -->
                <TextView
                    android:id="@+id/task_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25/09/2025"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>