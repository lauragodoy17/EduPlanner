<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F5F5F5"
    tools:context=".ui.Inicio.Fragments.Home.HomeFragment">


    <!-- Main Content Area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Date Filter Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calendario"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#9C27B0"
                android:gravity="center"
                android:layout_marginBottom="12dp"
                android:paddingVertical="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filtrar por fecha"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#666666"
                android:layout_marginBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_date_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp" />

        </LinearLayout>

        <!-- Section Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/textoeventos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eventos"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#949494"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textoclases"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tareas"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#949494"
                android:visibility="gone" />

        </LinearLayout>

        <!-- VERSION A: Content Area (with events/tasks) -->
        <ScrollView
            android:id="@+id/version_a_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Timeline Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tareas y Eventos"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#9C27B0" />

                        <Spinner
                            android:id="@+id/filter_spinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:minHeight="32dp" />

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_timeline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:layout_marginBottom="16dp" />

                </LinearLayout>

                <!-- Container for RecyclerViews (preserving existing functionality) -->
                <LinearLayout
                    android:id="@+id/container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp"
                    android:visibility="gone">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerclases"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/containerb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclereventos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <!-- VERSION B: Empty State -->
        <LinearLayout
            android:id="@+id/version_b_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            android:padding="32dp">

            <!-- Empty State Image Placeholder -->
            <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_height="180dp"
                app:cardCornerRadius="90dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="32dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#E8E8E8">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="ðŸ“š"
                        android:textSize="48sp" />

                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <!-- Empty message for tasks -->
            <TextView
                android:id="@+id/textonoclases"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No tienes tareas pendientes"
                android:textSize="18sp"
                android:textColor="#4E6B56"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />

            <!-- Empty message for events -->
            <TextView
                android:id="@+id/textonoeventos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No tienes eventos pendientes"
                android:textSize="18sp"
                android:textColor="#4E6B56"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Haz clic en el botÃ³n del +"
                android:textSize="16sp"
                android:textColor="#7B68EE"
                android:textStyle="bold"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>