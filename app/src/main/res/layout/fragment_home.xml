<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F5F5F5"
    tools:context=".ui.Inicio.Fragments.Home.HomeFragment">

    <!-- Header -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:gravity="center_vertical"
            android:background="@android:color/white">

            <!-- Hamburger Menu Icon -->
            <ImageView
                android:id="@+id/menu_hamburger"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_menu_hamburger"
                android:contentDescription="Menu"
                android:padding="2dp" />

            <!-- Title Calendario -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="EduPlanner"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#7B68EE"
                android:gravity="center"
                android:letterSpacing="0.05" />

            <!-- Profile Icon -->
            <ImageView
                android:id="@+id/profile_icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_profile_modern"
                android:contentDescription="Profile"
                android:padding="2dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Main Content Area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Section Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/textoeventos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eventos"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#949494"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textoclases"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tareas"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#949494"
                android:visibility="gone" />

        </LinearLayout>

        <!-- VERSION A: Content Area (with events/tasks) -->
        <ScrollView
            android:id="@+id/version_a_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Container for RecyclerViews (preserving existing functionality) -->
                <LinearLayout
                    android:id="@+id/container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerclases"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/containerb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclereventos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <!-- VERSION B: Empty State -->
        <LinearLayout
            android:id="@+id/version_b_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            android:padding="32dp">

            <!-- Empty State Image Placeholder -->
            <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_height="180dp"
                app:cardCornerRadius="90dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="32dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#E8E8E8">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="ðŸ“š"
                        android:textSize="48sp" />

                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <!-- Empty message for tasks -->
            <TextView
                android:id="@+id/textonoclases"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No tienes tareas pendientes"
                android:textSize="18sp"
                android:textColor="#4E6B56"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />

            <!-- Empty message for events -->
            <TextView
                android:id="@+id/textonoeventos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No tienes eventos pendientes"
                android:textSize="18sp"
                android:textColor="#4E6B56"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Haz clic en el botÃ³n del +"
                android:textSize="16sp"
                android:textColor="#7B68EE"
                android:textStyle="bold"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

    <!-- Bottom Navigation -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:cardCornerRadius="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:paddingVertical="16dp"
            android:paddingHorizontal="8dp">

            <!-- Home Icon -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="8dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_home_modern"
                    android:contentDescription="Home" />

            </LinearLayout>

            <!-- Calendar Icon -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="8dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_calendar_modern"
                    android:contentDescription="Calendar" />

            </LinearLayout>

            <!-- Profile Icon -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="8dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_profile_modern"
                    android:contentDescription="Profile" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>